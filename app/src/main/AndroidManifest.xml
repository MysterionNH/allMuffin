<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mysterionnh.allmuffin">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- MainActivity -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SettingsActivity -->
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/sa_title"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="sensorPortrait" />

        <!-- RuleOfThreeActivity -->
        <activity
            android:name=".activities.RuleOfThreeActivity"
            android:label="@string/rot_title"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="sensorPortrait" />

        <!-- TimerActivity -->
        <activity
            android:name=".activities.TimerActivity"
            android:label="@string/timer_title"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="sensorPortrait" />

        <!-- PlaygroundActivity -->
        <activity
            android:name=".activities.PlaygroundActivity"
            android:label="@string/pg_title"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="sensorPortrait" />

        <!-- CalculatorActivity -->
        <activity
            android:name=".activities.CalculatorActivity"
            android:label="@string/calc_title"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="sensorPortrait" />
    </application>
</manifest>
