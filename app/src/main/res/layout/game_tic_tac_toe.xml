<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <FrameLayout
        android:id="@+id/gameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/turnView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/game_ttt_turn"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Space
                android:id="@+id/spacer80"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/turnView" />

            <GridLayout
                android:id="@+id/battleField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spacer80"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:alignmentMode="alignBounds"
                android:background="#000"
                android:columnCount="3"
                android:columnOrderPreserved="true"
                android:rowCount="3"
                android:rowOrderPreserved="true"
                android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/grid00"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/gird10"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="top|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/gird20"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid01"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid11"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid21"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid02"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid12"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

                <TextView
                    android:id="@+id/grid22"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|center|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="false"
                    android:textSize="75sp" />

            </GridLayout>

            <Space
                android:id="@+id/space7"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/battleField" />

            <Button
                android:id="@+id/replayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space7"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/game_ttt_replay_button"
                android:visibility="gone" />

        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>