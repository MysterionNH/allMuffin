<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Material.Light.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/greeting"
                    android:textColor="#ff000000" />
            </RelativeLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="35dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:id="@+id/currentPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="@string/currentPercent"
                    android:inputType="number|numberDecimal"
                    android:singleLine="true" />
            </RelativeLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/currentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="@string/currentValue"
                    android:inputType="number|numberDecimal" />
            </RelativeLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/valueOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="@string/valueOne"
                    android:inputType="number|numberDecimal" />
            </RelativeLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/valueHundred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:hint="@string/valueHundred"
                    android:inputType="number|numberDecimal" />
            </RelativeLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/questionedPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/questionedPercent"
                    android:inputType="number|numberDecimal" />

                <EditText
                    android:id="@+id/questionedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/questionedValue"
                    android:inputType="number|none|numberDecimal" />
            </LinearLayout>
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/buttonText" />
            </RelativeLayout>
        </TableRow>
    </LinearLayout>

</RelativeLayout>
