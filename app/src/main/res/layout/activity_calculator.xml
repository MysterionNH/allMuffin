<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Material.Light.DarkActionBar">

    <RelativeLayout
        android:id="@+id/outputWrapper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/outputView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:height="20dp"
            android:editable="false"
            android:gravity="bottom|end|right"
            android:hint="@string/numButton0"
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inputWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outputWrapper"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/inputGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:rowCount="5"
            android:textAlignment="center">

            <Button
                android:id="@+id/clrButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/clrButton" />

            <Button
                android:id="@+id/divButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/divButton" />

            <Button
                android:id="@+id/timesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/timesButton" />

            <Button
                android:id="@+id/delButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/delButton" />

            <Button
                android:id="@+id/numButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/numButton7" />

            <Button
                android:id="@+id/numButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/numButton8" />

            <Button
                android:id="@+id/numButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/numButton9" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/minusButton" />

            <Button
                android:id="@+id/numButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/numButton4" />

            <Button
                android:id="@+id/numButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/numButton5" />

            <Button
                android:id="@+id/numButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/numButton6" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/plusButton" />

            <Button
                android:id="@+id/numButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/numButton1" />

            <Button
                android:id="@+id/numButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/numButton2" />

            <Button
                android:id="@+id/numButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/numButton3" />

            <Button
                android:id="@+id/parenthesesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/parenthesesButton" />

            <Button
                android:id="@+id/numButton0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/numButton0" />

            <Button
                android:id="@+id/periodButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/periodButton" />

            <Button
                android:id="@+id/reverseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/reverseButton" />

            <Button
                android:id="@+id/equalsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/equalsButton" />

        </GridLayout>
    </RelativeLayout>
</RelativeLayout>