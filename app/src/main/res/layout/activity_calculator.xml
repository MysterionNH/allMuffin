<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainFrame"
    style="@android:style/Widget.DeviceDefault.Light.Button.Small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/outputWrapper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#DDCB6E"
        android:backgroundTintMode="screen"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lastProblem"
                style="@android:style/TextAppearance.Holo.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:height="20dp"
                android:background="#EAD9AF"
                android:gravity="top|end|right"
                android:inputType="none"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:singleLine="true"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/outputView"
                style="@android:style/TextAppearance.Holo.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/lastProblem"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="58dp"
                android:height="20dp"
                android:background="#EAD9AF"
                android:gravity="bottom|end|right"
                android:hint="@string/button_num_zero"
                android:inputType="none"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:textSize="50sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inputWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outputWrapper"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/inputGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:columnCount="4"
            android:rowCount="5"
            android:textAlignment="center">

            <Button
                android:id="@+id/clrButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/button_clear" />

            <Button
                android:id="@+id/divButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/button_divide" />

            <Button
                android:id="@+id/timesButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/button_multiply" />

            <Button
                android:id="@+id/delButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:singleLine="true"
                android:text="@string/button_delete" />

            <Button
                android:id="@+id/numButton7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/button_num_seven" />

            <Button
                android:id="@+id/numButton8"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/button_num_eight" />

            <Button
                android:id="@+id/numButton9"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/button_num_nine" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:singleLine="true"
                android:text="@string/button_subtract" />

            <Button
                android:id="@+id/numButton4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/button_num_four" />

            <Button
                android:id="@+id/numButton5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/button_num_five" />

            <Button
                android:id="@+id/numButton6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/button_num_six" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:singleLine="true"
                android:text="@string/button_add" />

            <Button
                android:id="@+id/numButton1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/button_num_one" />

            <Button
                android:id="@+id/numButton2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/button_num_two" />

            <Button
                android:id="@+id/numButton3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/button_num_three" />

            <Button
                android:id="@+id/parenthesesButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:singleLine="true"
                android:text="@string/button_parentheses" />

            <Button
                android:id="@+id/numButton0"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/button_num_zero" />

            <Button
                android:id="@+id/periodButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/button_period" />

            <Button
                android:id="@+id/reverseButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/button_revert_value" />

            <Button
                android:id="@+id/equalsButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="4"
                android:singleLine="true"
                android:text="@string/button_equals" />

        </GridLayout>
    </RelativeLayout>
</RelativeLayout>